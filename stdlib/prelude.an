module InFile
    next_line (f:InFile) -> Str =
        if feofb f then return ""
        eof = cast 255

        len = mut 0usz
        cap = mut 64usz
        cstr = mut malloc cap

        while
            c = fgetc8 f

            if c == eof then break

            //Flag feof if eof occurs after terminating newline
            if c == '\n' then
                peek = fgetc8 f
                if peek != eof then ungetc (cast peek) f
                break

            if len+1usz >= cap then
                cap *= 2usz
                cstr := realloc cstr cap

            cstr#len := c
            len += 1usz
            true
        do ()

        cstr#len := '\0'
        Str cstr len


//print a message then return user input
input msg -> Str =
    len = mut 0usz
    cstr = mut cast 0

    printne msg

    while
        c = getchar ()
        if len % 32usz == 0usz then
            cstr := realloc cstr (len+32usz)

        cstr#len := c
        len += 1usz
        c != '\n'
    do ()

    len -= 1usz
    cstr#len := '\0'
    Str cstr len
