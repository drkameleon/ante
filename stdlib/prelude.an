module Str
    reverse (s:Str) -> Str =
        buf = mut malloc (s.len + 1usz)

        i = mut 0usz
        while i < s.len do
            buf#i := s.cStr#(s.len - i - 1usz)
            i += 1usz

        buf#i := '\0'
        Str buf i


impl Cast i64 Str
    cast i =
        if i == 0i64 then return "0"
        len = mut 0usz
        alloc_size = 20usz
        buf = mut malloc (alloc_size + 1usz)
        buf#alloc_size := '\0'

        x = mut i
        isNeg = i < 0i64 and ((x *= -1i64); true)

        while x != 0i64 do
            len += 1usz
            buf#(alloc_size - len) := '0' + cast (x % 10i64)
            x /= 10i64

        if isNeg then
            len += 1usz
            buf#(alloc_size - len) := '-'

        offset = cast buf + (alloc_size - len)
        Str (cast offset) len


