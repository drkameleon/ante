module U64
    parse (s:Str) -> Maybe u64 =
        i = mut 0usz
        sum = mut 0u64

        while s.cStr#i != '\0' do
            c = s.cStr#i
            if c >= '0' and c <= '9' then
                sum *= 10u64
                sum += cast (c - '0')
                i += 1usz
                None
            else
                return None

        Some sum

module I64
    parse (s:Str) -> Maybe i64 =
        i = mut 0usz
        sum = mut 0i64
        isNeg =
            if s.len == 0usz or s.cStr#0usz == '-' then false
            else ((i += 1usz); true)

        while s.cStr#i != '\0' do
            c = s.cStr#i
            if c >= '0' and c <= '9' then
                sum *= 10i64
                sum += cast (c - '0')
                i += 1usz
                None
            else
                return None

        Some (if isNeg then -1i64 * sum else sum)


