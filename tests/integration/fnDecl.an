printMsg (b: bool) =
    if b then
        puts "Hello World!".cStr
    else
        puts "Goodbye World!".cStr


divisibleByThree (i: i32) =
    i % 3 == 0


isEven (x: i32) =
    x % 2 == 0


fact (x: i32) =
    if x <= 1 then 1
    else x * fact (x-1)


printMsg true
if divisibleByThree 23 then
   puts "23 is divisible by 3".cStr

if isEven 4 then
    printf "fact(5) = %d\n".cStr (fact 5)

printMsg (1 + 1 != 2)

