
parse_int (str:Str) -> Maybe i32 =
    mut i = 0
    mut sum = 0

    while str.cStr#i != '\0' do
        c = str.cStr#i
        if c >= '0' and c <= '9' then
            sum *= 10
            sum += c - '0'
            i += 1
        else
            return None

    Some sum


parse_int_str (s:Str) =
    match parse_int s with
    | Some n -> print n
    | None ->
        parse_int_str <| input "Please enter a positive integer: "


parse_int_str "32"
parse_int_str "324321432"
parse_int_str "hello"
